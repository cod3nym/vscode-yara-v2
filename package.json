{
    "name": "yara",
    "displayName": "YARA",
    "description": "Rich language support for the YARA pattern matching language",
    "version": "1.4.1",
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#A4A4A4",
        "theme": "dark"
    },
    "publisher": "infosec-intern",
    "license": "MIT License - full document in LICENSE.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/infosec-intern/vscode-yara"
    },
    "bugs": {
        "url": "https://github.com/infosec-intern/vscode-yara/issues"
    },
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "yara",
                "aliases": [
                    "yara",
                    "yara-syntax",
                    "yaralang",
                    "YARA",
                    "Yara"
                ],
                "extensions": [
                    ".yara",
                    ".yar"
                ],
                "configuration": "yara/yara.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "yara",
                "scopeName": "source.yara",
                "path": "yara/syntaxes/yara.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "yara",
                "path": "yara/snippets/yara.json"
            }
        ],
        "configuration": {
            "title": "YARA",
            "properties": {
                "yara.require_imports": {
                    "type": "boolean",
                    "default": false,
                    "description": "When providing suggestions for YARA modules, first require an import statement at the top of the rule file. For example, in order to autocomplete the 'time.now()' method, require 'import \"time\"'. Off by default."
                },
                "yara.meta_entries": {
                    "type": "object",
                    "default": {},
                    "description": "A set of metadata entries to insert into rules. Common keys are date, reference, hash, and author. Empty values will create meta keys with a snippet tabstop, and variables allowed in https://code.visualstudio.com/docs/editor/userdefinedsnippets#_variables are accepted.",
                    "maxProperties": 50,
                    "additionalProperties": true
                },
                "yara.sort_meta": {
                    "type": "boolean",
                    "default": true,
                    "description": "Sort the metadata entries in alphabetical order by keys. Otherwise, insert keys as listed."
                }
            }
        }
    },
    "main": "out/yara/src/extension",
    "activationEvents": [
        "onLanguage:yara"
    ],
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "lint": "eslint yara/src --ext ts",
        "linttests": "eslint test --ext ts",
        "test": "node ./out/test/runTests.js"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.14.13",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "eslint": "^7.21.0",
        "mocha": "^8.3.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.5.1"
    },
    "dependencies": {
        "@types/vscode": "^1.54.0",
        "glob": "^7.1.6"
    }
}
